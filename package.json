{
  "name": "apispark",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "dev:functions": "cd api && npm run start",
    "build": "npm run clean && vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist && npm run build:functions",
    "build:functions": "cd api && npm install && npm run build",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "swa:start": "swa start dist --api-location api --run \"npm run dev:functions\"",
    "swa:build": "npm run build && swa build",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:ci": "vitest --run --reporter=junit --reporter=json --outputFile.junit=artifacts/test-results.xml --outputFile.json=artifacts/test-results.json",
    "quality:audit": "tsx scripts/quality-audit.ts"
  },
